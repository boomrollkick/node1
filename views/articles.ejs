<% layout('layout') -%>
ARTICLES
<content>
  <div class="spacer">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="post-preview">

       <!--
   
          each article, i in articles
            .post-preview
              a(href='/articles/show/#{article._id}')
                h2.post-title #{article.title}
                h3.post-subtitle #{article.subtitle}
              p.post-meta
                | Posted by #{article.author}
                | on #{moment(article.created_at).format('MMMM Do YYY, h:mm:ss a')} 
          <hr />

-->
                  
                       <% articles.forEach(function(article) { %>
              <br />
        <a href="/articles/show/<%= article._id %>"> <h2><%= article.title %></h2></a>
         <h3><%= article.subtitle %></h3>
        Posted by #<%= article.author %><br />
        Posted by #<%= moment(article.created_at).format('MMMM Do YYY, h:mm:ss a')%>  
    <% }); %>
                   </div>
          </div>
      </div>
    </div>
</content>
